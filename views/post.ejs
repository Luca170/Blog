<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/post.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
</head>
<body>
    <a href="/home" class="home">Home</a>
    <a href="/home/blog" class="create">Create post</a>
   <% posts.forEach(post => { %>
        <div class="post">
     <div class="title"><%= post.title %> </div>
     <textarea  class="description" readonly><%= post.description %> </textarea>
     <% if(currentUser == post.author) { %>
       <form action="/home/blog/all-posts/edit" method="GET">
        <input type="hidden" id="id" name="id" value="<%= post.id %>" readonly>
        <input type="hidden" name="description" value = "<%= post.description %>">
        <input type="hidden" name="title" value = "<%= post.title %>">
        <input type="text" id="user"class = "author"name="author" value = "<%= post.author %>"readonly> 
        <button type="submit" id="edit">Edit Post</button>
    </form>
    <form action="/home/blog/all-posts/delete" method="POST">
    <input type="hidden" name="id" value="<%=post.id%>">
    <button type="submit" id="delete">Delete Post</button>
    </form>
   <%  } %> 
   <% if(currentUser != post.author) { %>
    <input type="text" id="author" class = "author"name="author" value = "<%= post.author %>"readonly> 
<%} %> 
</div>
 <%  }) %> 

<script>

</script>
</body>
</html>